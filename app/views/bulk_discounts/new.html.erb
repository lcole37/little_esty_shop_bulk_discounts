<%= form_with url: merchant_bulk_discounts_path(@merchant), method: :post, local: true do |f| %>
  <%= f.label :percent_off, 'Percent Off:' %>% <br>
  <%=  f.number_field :percent_off, min: 0, step: 5, max: 50 %> <br>
  <%= f.label :quantity, 'Quantity Required:' %> <br>
  <%= f.number_field :quantity, min: 5 %> <br>
  <%= f.label :status %>
  <%= f.select :status, options_for_select(['disabled', 'enabled']) %>
  <%= f.submit 'Add Bulk Discount' %>
<% end %>
